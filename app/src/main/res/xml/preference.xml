<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
android:title="@string/preferences">
	<PreferenceCategory
		android:title="@string/pref_cat_search">
	 <CheckBoxPreference android:title="@string/pref_search" android:key="contentSearch"
	android:summary="@string/pref_search_sum"
	android:defaultValue="false"
	 />
	<CheckBoxPreference android:title="@string/pref_sensitive_search" android:key="sensitiveSearch"
		android:defaultValue="true"
		/>
        <CheckBoxPreference
            android:title="@string/pref_display_search_option"
            android:key="displaySearchOptions"
            android:defaultValue="true"
            />
		<CheckBoxPreference android:title="@string/pref_search_option_orientation"
			android:key="pref_searchCheckboxV"
			android:defaultValue="false"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/pref_cat_display">
	 <CheckBoxPreference android:title="@string/pref_date" android:key="pref_date"
	android:summary="@string/pref_date_sum"
	android:defaultValue="false"
	 />
    <CheckBoxPreference android:title="@string/pref_date_mod" android:key="pref_date_mod"
        android:summary="@string/pref_date_mod_sum"
        android:defaultValue="false"
        />
    <CheckBoxPreference android:title="@string/pref_theme" android:key="pref_theme"
        android:summary="@string/pref_theme_sum"
        android:defaultValue="false"
    />
	<EditTextPreference
		android:key="pref_preview_char_limit"
		android:inputType="number"
		android:defaultValue="30"
		android:maxLength="4"
		android:summary="@string/pref_preview_limit_summary"
		android:title="@string/pref_preview_limit"
		/>
		<CheckBoxPreference android:title="@string/pref_keep_position_scroll" android:key="pref_scroll"
			android:defaultValue="False"
			/>
		<ListPreference
			android:key="pref_tri"
			android:title="@string/pref_sort_by"
			android:defaultValue="1"
			android:entries="@array/tri"
			android:entryValues="@array/triValeur" />
		<CheckBoxPreference android:title="@string/pref_sort" android:key="pref_ordretri"
			android:defaultValue="false"
			/>
		<!--
		<ListPreference
			android:key="pref_sizeNote"
			android:title="@string/pref_text_size"
			android:defaultValue="18"
			android:entries="@array/textSize"
			android:entryValues="@array/textSizeValues" />
			-->
		<EditTextPreference
			android:key="pref_sizeNote"
			android:inputType="number"
			android:defaultValue="18"
			android:maxLength="2"
			android:title="pref_sizeNote"
			/>
		<EditTextPreference
			android:key="pref_sizeNote_button_offset"
			android:inputType="number|numberDecimal|numberSigned"
			android:defaultValue="0"
			android:maxLength="3"
			android:title="pref_sizeNote_button"
			/>
		<CheckBoxPreference android:title="pref_forceButtonsH" android:key="pref_forceButtonsH"
			android:defaultValue="false"
			/>
		<CheckBoxPreference android:title="pref_forceEditionButtonsH" android:key="pref_forceEditionButtonsH"
			android:defaultValue="false"
			/>
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/pref_cat_confirmation">
	<CheckBoxPreference android:title="@string/pref_delete_confirmation" android:key="pref_del"
		android:defaultValue="True"
		/>
	<CheckBoxPreference android:title="@string/pref_cancel_confirmation" android:key="pref_cancel"
		android:defaultValue="True"
		/>
	<ListPreference android:title="@string/pref_backButton_action" android:key="pref_back_action"
		android:summary="@string/pref_backButton_action_summary"
		android:defaultValue="2"
		android:entries="@array/backButtonAction"
		android:entryValues="@array/backButtonActionValue"
		/>
	</PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_db">
        <Preference android:title="@string/pref_export_db"
                android:key="buttonExport" />
        <Preference android:title="@string/pref_import_db"
            android:key="buttonImport" />
        <!--<Preference android:title="@string/pref_clean_db"
            android:key="buttonDelete" />-->
    </PreferenceCategory>
</PreferenceScreen>	